<br/>
<%= link_to 'Edit', edit_meal_path(@meal), :class => 'button' %>
<h2 class="title"> <%= @meal.title %> </h2>
<%= image_tag('menu_swirl.png', :class => 'center') %>
<div class="right"><h3> <%= @meal.date %> </h3></div>

<p>
  <%= link_to @meal.website, @meal.website, :target => '_blank' %>
</p>
<p>
  <%# Need to mention when an order has been placed... and then paid eventually %>
  <% order = @meal.orders.where(user_id: current_user.id).take %>
  <% if !order.nil? %>
    <% @order = order %>
    <%= render('order/order_form') %>
  <% end %>
</p>
<div>
  <table class="center orders-table">
    <thead>
        <tr><th colspan="3">Orders:</th><th></th><th></th></tr>
    </thead>
    <tbody>
  <% @meal.orders.each do |o| %>
    <% @order = o %>
    <%= render :partial => 'order/order', :locals => { :owner => (@meal.owner_id == current_user.id) } %>
  <% end %>
    </tbody>
    <tfoot>
        <tr><td class="total-row" colspan="3">Total: <%= number_to_currency @meal.total_cost %></td></tr>
        <tr><td class="total-row" colspan="3">Owing: <%= number_to_currency @meal.total_owing %></td></tr>
    </tfoot>
  </table>
</div>

